<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.desain.activities.mobileWallet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
	<uses-feature android:name="android.hardware.camera" />
 	<uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <!-- Splash Screen -->
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar" android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Register -->   
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar" android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Login -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar" android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />                
            </intent-filter>
         </activity>
         <!-- Home -->
         <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar" android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />                
            </intent-filter>
         </activity>
         <!-- Enter Credit Card Information activity -->
         <activity
             android:name=".CreditCardInformationActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar" android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />                
            </intent-filter>
         </activity>
    </application>
</manifest>