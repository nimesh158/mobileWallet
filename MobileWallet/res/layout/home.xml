<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <!-- Add a new credit card button -->
    <Button 
       android:id="@+id/addNewCard"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dip"
	   android:gravity="center"
	   android:text="@string/addNewCard"
	   android:onClick="addNewCreditCard"/>
    
    <TextView 
        android:id="@+id/ccLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       	android:layout_marginTop="10dip"
        android:textSize="25sp"
	   	android:gravity="center"
	   	android:text="@string/creditCards" />
    
    <!--  Table That displays list of all the credit cards -->
    <ScrollView
        android:layout_width="fill_parent"
        
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        
	    <TableLayout
	    	android:id="@+id/ccTable"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	       	android:layout_marginTop="10dip">
		</TableLayout>
	</ScrollView>

    <!--  Image Gallery that displays front/back images of the credit card user is viewing -->
</LinearLayout>